function getRandomInt(min, max) {
  return Math.floor(Math.random() * (max - min + 1)) + min;
}

function checkProbabilityTheory(count) {
  let evenCount = 0;
  let oddCount = 0;

  for (let i = 0; i < count; i++) { 
    let randomNumber = getRandomInt(100, 1000);

    if (randomNumber % 2 === 0) {
      evenCount++;
    } else {
         oddCount++;
      }
  } 

  let ratio = oddCount === 0 
    ? "неможливо розрахувати (усі числа парні)" 
    : ((evenCount / oddCount) * 100).toFixed(2) + "%";

 return `Кількість згенерованих чисел: ${count}, Кількість парних: ${evenCount}, Кількість непарних: ${oddCount}, Відсоток парних до непарних: ${ratio}`;
} 
